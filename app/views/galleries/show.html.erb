<% content_for :id, "media-show" %>

<h1><%= @gallery.name %></h1>
<div id="medias">
	<div class="show">
		<p class="description"><%= @gallery.description %></p>
		<!-- <p class="date"><%= l @gallery.date, format: :text %><br><br></p> -->
		<p class="img">
			<% @gallery.paintings.sort.each do |painting| %>
				<a class="fancybox" href="<%= painting.image_url %>">
					<img src="<%= painting.image_url(:thumb) %>">
				</a>
			<% end %>
		</p>
	</div>
</div>
