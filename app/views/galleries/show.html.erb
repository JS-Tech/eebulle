<% content_for :id, "media-show" %>

<h1><%= @gallery.name %></h1>
<div id="medias">
	<div class="show">
		<p class="description"><%= @gallery.description %></p>
		<p class="img">
      <% @gallery.paintings.sort.each do |painting| %>
				<a class="fancybox-button" rel="fancybox-button" href="<%= url_for(painting.image) %>">
					<img src="<%= url_for(painting.image.variant(resize: '136x90')) %>" alt="">
				</a>
			<% end %>
		</p>
	</div>
</div>
