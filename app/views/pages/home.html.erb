<% content_for :id, 'home' %>
<% content_for :banner do %>
	<h1>Une église <span class="a">accessible</span>, <span class="a">dynamique</span> et <span class="a">intergénérationnelle</span> !</h1>
<% end %>

<div class="content">
	<%= render "content" %>
</div>

<% unless @event.nil? %>
	
	<h2>Evénement</h2>
	<div class="event">
		<%= simple_format @event.content %>
	</div>

<% end %>

<h2>Activités</h2>

<div class="activities">
	<% @activities.each do |activity| %>
		<div class="activity">
			<div class="wrapper">
				<h3><%= activity.name %></h3>
				<div class="content">
					<%= activity.content %>
				</div>
			</div>
		</div>
	<% end %>
	<div id="clear"></div>
</div>