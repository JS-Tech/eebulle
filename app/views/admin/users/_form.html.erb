<%= form_for [:admin, @user] do |f| %>
	<ul class="form">
		<%= render 'error_messages', object: f.object %>
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>
		<li>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</li>
		<li>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</li>
		<li>
			<%= f.label :level %>
			<%= f.select :level, {"superadmin" => "1", "admin" => "2", "uploader" => "3", "member" => "4"} %>
		</li>
		<li>
			<%= f.submit %>
		</li>
	</ul>
<% end %>