<%= form_for [:admin, @message], html: { id: "message-upload" } do |f| %>

	<div class="errors"><%= render 'error_messages', object: f.object %></div>
	<ul class="form">
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>
		<li>
			<%= f.label :date %>
			<%= f.date_select :date %>
		</li>
		<li>
			<%= f.label :speaker %>
			<%= f.text_field :speaker %>
		</li>
		<li>
			<%= f.label :file %>
			<%= f.file_field :file %>
		</li>
		<li hidden class="progress">En cours de téléchargement... <%= image_tag 'medias/loader.gif' %></li>
	</ul>

	<div id="clear"></div>

	<ul class="center">
		<li><%= f.submit %></li>
	</ul>
<% end %>

<script src="http://malsup.github.com/jquery.form.js"></script> 
<script> 
  $(document).ready(function() {
  	form = $('#message-upload');
  	form.submit(function(){
  		$('.progress').show();
  	});
    form.ajaxForm(); 
  }); 
</script>