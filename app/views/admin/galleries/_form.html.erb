<%= form_for [:admin, @gallery] do |f| %>	

	<%= render 'error_messages', object: f.object %>
	<ul class="form">
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>		
		</li>
		<li>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</li>
		<li>
			<%= f.label :date %>
			<%= f.date_select :date %>
		</li>
	</ul>
	<div id="clear"></div>

	<ul class="center">
		<li><%= f.submit %></li>
	</ul>

<% end %>