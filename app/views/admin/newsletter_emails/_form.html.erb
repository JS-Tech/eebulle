<%= form_for [:admin, @newsletter_email] do |f| %>

	<%= render 'error_messages', object: f.object %>
	<ul class="form">
		<li>
			<%= f.label :email %>
			<%= f.email_field :email %>
		</li>
		<li>
			<%= f.label :confirmed %>
			<%= f.check_box :confirmed %>
		</li>
	</ul>
	<div id="clear"></div>

	<ul class="center">
		<li><%= f.submit %></li>
	</ul>
<% end %>
