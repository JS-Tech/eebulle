<h1><%= t('email.admin.new.title') %></h1>

<%= form_tag admin_emails_path, remote: true do %>

	<ul class="form">
		<li><%= text_field_tag :subject, nil, placeholder: "Objet" %></li>
	</ul>
	<ul class="form">
		<li><%= text_field_tag :title, nil, placeholder: "Titre" %></li>
	</ul>
	<ul class="form">
		<li><%= text_field_tag :subtitle, nil, placeholder: "Sous-titre (optionel)" %></li>
	</ul>
	<ul class="form">
		<h4>Exemple de contenu</h4>
		<div class="email-example"><%= render 'example' %></div>
	</ul>	
	<ul class="form">
		<li><%= text_area_tag :content, nil, placeholder: "Contenu", rows: 10 %></li>
	</ul>

	<div id="clear"></div>

	<ul class="center">
		<li><%= submit_tag "Envoyer", data: {confirm: "Confirmez-vous l'envoi de cette newsletter ?"} %></li>
	</ul>

	<div id="clear"></div>

	<ul class="form">
		<li><%= label_tag "Email de test" %></li>
		<li><%= text_field_tag :email %></li>
	</ul>

	<ul class="center">
		<li><%= submit_tag "Tester" %></li>
	</ul>

<% end %>
