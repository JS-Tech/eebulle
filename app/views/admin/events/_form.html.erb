<%= form_for [:admin, @event] do |f| %>

	<%= render 'error_messages', object: f.object %>
	<ul class="form col2">
		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</li>
		<li>
			<%= f.label :image %>
			<%= f.file_field :image %>
			Format recommand√© : 1920 x 300
		</li>
	</ul>
	<ul class="form col2">
		<li>
			<%= f.label :date %>
			<%= f.datetime_select :date %>
		</li>
		<li>
			<%= f.label :duration %>
			<%= f.number_field :duration %>
		</li>
	</ul>

	<div id="clear"></div>

	<ul class="form"><li><%= f.text_area :content %></li></ul>

	<div id="clear"></div>

	<ul class="center">
		<li>
			<%= f.submit %>
		</li>
	</ul>
<% end %>
