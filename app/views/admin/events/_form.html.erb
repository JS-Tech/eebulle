<%= form_for [:admin, @event] do |f| %>

	<%= render 'error_messages', object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :content %>
	<%= f.text_area :content, class: "ckeditor" %>

	<%= f.label :date %>
	<%= f.datetime_select :date %>

	<%= f.label :duration %>
	<%= f.number_field :duration %>

	<%= f.label :image %>
	<%= f.file_field :image %>
	Format recommand√© : 1920 x 250
	
	<%= f.submit %>
<% end %>