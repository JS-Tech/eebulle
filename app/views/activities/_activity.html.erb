<div class="comp-activity">
  <%= link_to "", activities_path(anchor: CGI.escape(activity.name)), class: "link" %>
  <%= image_tag activity.image.variant(resize: "256x256") %>
  <div class="activity-content">
    <h3 id="<%= CGI.escape activity.name %>"><%= activity.name %></h3>
    <%= render 'md_content', content: activity.content %>
    <div class="time">
      <i class="fi-clock"></i>
      <%= l activity.time, format: :hour_text %><% unless activity.recurrence.name == "Aucune" %><%= ", " + activity.days.pluck(:name).join(',') %> <%= activity.recurrence.name %><% end %>
    </div>
  </div>
</div>
